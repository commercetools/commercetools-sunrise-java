<!-- start common/nav-menu-category.hbs -->
{{#withCategoryChildren category}}
  <ul class="dropdown-menu megamenu row dropdown-submenu">
    <li class="col-sm-8">
      <div class="nav-accordion">
        {{#each this}}
          <h3><a href="/{{slug}}">{{name}}</a></h3>
          <ul>
             {{#withCategoryChildren this}}
                {{#each this}}
                  <li><a href="/{{slug}}">{{name}}</a></li>
                {{/each}}
             {{/withCategoryChildren}}
          </ul>
        {{/each}}
      </div>
    </li>
    <li class="col-sm-4 hidden-xs">
      <img src="/assets/img/menu-teaser-98f408c92eb1d7c94ba608dde9782ba0.jpg" alt="{{i18n "main:header.teaser"}}" class="img-responsive megamenu-img">
    </li>
  </ul>
{{/withCategoryChildren}}
<!-- end common/nav-menu-category.hbs -->
