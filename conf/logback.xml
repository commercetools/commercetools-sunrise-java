<configuration debug="false">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%level %logger - %msg%n%xException</pattern>
        </encoder>
    </appender>

    <!--
      The logger name is typically the Java/Scala package name.
      This configures the log level to log at for a package and its children packages.
    -->
    <logger name="application" level="DEBUG" />
    <logger name="play" level="INFO" />
    <logger name="play.requests" level="DEBUG" />
    <logger name="sphere" level="INFO" />
    <logger name="sphere.metrics.simple" level="trace" />
    <logger name="com.github.jknack.handlebars.Handlebars" level="ERROR" />
    <logger name="com.commercetools.sunrise" level="INFO" />
    <logger name="com.commercetools.sunrise.common.httpauth.basic.BasicAuthenticationProvider" level="INFO" />
    <logger name="com.commercetools.sunrise.common.categorytree.CategoryTreeInNewProvider" level="INFO" />
    <logger name="com.commercetools.sunrise.common.categorytree.RefreshableCategoryTree" level="DEBUG" />
    <logger name="com.commercetools.sunrise.common.contexts.ProjectContext" level="DEBUG" />
    <logger name="com.commercetools.sunrise.common.contexts.UserContext" level="DEBUG" />
    <logger name="com.commercetools.sunrise.common.ctp.ProductDataConfigProvider" level="INFO" />
    <logger name="com.commercetools.sunrise.common.ctp.RequestScopedSphereClientProvider" level="INFO" />
    <logger name="com.commercetools.sunrise.common.suggestion.SunriseProductRecommendation" level="INFO" />
    <logger name="com.commercetools.sunrise.common.template.engine.handlebars.HandlebarsTemplateEngine" level="INFO" />
    <logger name="com.commercetools.sunrise.common.template.i18n.yaml.YamlI18nResolver" level="INFO" />
    <logger name="com.commercetools.sunrise.common.template.i18n.ConfigurableI18nResolverProvider" level="INFO" />
    <logger name="com.commercetools.sunrise.common.template.engine.HandlebarsTemplateEngineProvider" level="INFO" />
    <logger name="com.commercetools.sunrise.productcatalog" level="INFO" />
    <logger name="com.commercetools.sunrise.theme.WebjarsFilesCopier" level="INFO" />


    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>